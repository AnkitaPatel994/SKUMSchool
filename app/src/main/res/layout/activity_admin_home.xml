<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/sw_color"
    android:padding="17dp"
    tools:context="com.intelliworkz.skumschool.Home.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layAdminAttendence"
            style="@style/main_screen_layout"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgAddStd"
                style="@style/main_screen_image"
                android:background="@drawable/profile" />

            <TextView
                style="@style/main_screen_text"
                android:layout_below="@+id/imgAddStd"
                android:text="Add Student" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>