<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="17dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.intelliworkz.skumschool.Admin.SearchStudent.StudentDetailActivity"
    tools:showIn="@layout/app_bar_student_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="60dp">

                    <TextView
                        android:id="@+id/txtViewStudentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtViewClass"
                                style="@style/profile_screen_imp_text"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20dp" />

                            <TextView
                                style="@style/profile_screen_text"
                                android:text="@string/txt_class" />

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/sw_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtViewRollNo"
                                style="@style/profile_screen_imp_text"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20dp" />

                            <TextView
                                style="@style/profile_screen_text"
                                android:text="@string/txt_rollno" />

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/sw_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtViewMedium"
                                style="@style/profile_screen_imp_text"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20dp" />

                            <TextView
                                style="@style/profile_screen_text"
                                android:text="@string/txt_medium" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="#ccc" />

                    <TextView
                        android:id="@+id/txtViewAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:textColor="#595959"
                        android:textSize="12dp" />

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/account"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtViewBOD"
                        style="@style/profile_screen_imp_text"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        style="@style/profile_screen_text"
                        android:text="@string/txt_bod"
                        android:textSize="9dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtViewAddmissionDate"
                        style="@style/profile_screen_imp_text"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        style="@style/profile_screen_text"
                        android:text="@string/txt_addmissionDate"
                        android:textSize="9dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtViewGRNo"
                        style="@style/profile_screen_imp_text"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        style="@style/profile_screen_text"
                        android:text="@string/txt_GRNo"
                        android:textSize="9dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtViewVanNo"
                        style="@style/profile_screen_imp_text"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        style="@style/profile_screen_text"
                        android:text="@string/txt_VanNo"
                        android:textSize="9dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/profile_screen_text"
                    android:text="@string/txt_fathername" />

                <TextView
                    android:id="@+id/txtViewFatherName"
                    style="@style/profile_screen_imp_text"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="#ccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:text="@string/txt_occupation"
                            android:textSize="9dp" />

                        <TextView
                            android:id="@+id/txtViewOccupation"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:text="@string/txt_mobile"
                            android:textSize="9dp" />

                        <TextView
                            android:id="@+id/txtViewMobile"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textSize="13dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:text="@string/txt_emailId"
                            android:textSize="9dp" />

                        <TextView
                            android:id="@+id/txtViewEmail"
                            style="@style/profile_screen_imp_text"
                            android:textAllCaps="false"
                            android:textColor="#595959"
                            android:textSize="13dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/profile_screen_text"
                    android:text="@string/txt_mothername" />

                <TextView
                    android:id="@+id/txtViewMotherName"
                    style="@style/profile_screen_imp_text"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="#ccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:text="@string/txt_occupation"
                            android:textSize="9dp" />

                        <TextView
                            android:id="@+id/txtViewMOccupation"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:text="@string/txt_mobile"
                            android:textSize="9dp" />

                        <TextView
                            android:id="@+id/txtViewMMobile"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textSize="13dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtViewMoEmail"
                            style="@style/profile_screen_text"
                            android:text="@string/txt_emailId"
                            android:textSize="9dp" />

                        <TextView
                            android:id="@+id/txtViewMEmail"
                            style="@style/profile_screen_imp_text"
                            android:textAllCaps="false"
                            android:textColor="#595959"
                            android:textSize="13dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
