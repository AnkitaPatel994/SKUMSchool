<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e0e0e0"
    android:padding="17dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.intelliworkz.skumschool.Profile.ProfileActivity"
    tools:showIn="@layout/app_bar_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:paddingTop="60dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txtStudentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtClass"
                                style="@style/profile_screen_imp_text"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20dp"/>

                            <TextView
                                style="@style/profile_screen_text"
                                android:text="@string/txt_class" />

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/sw_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtRollNo"
                                style="@style/profile_screen_imp_text"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20dp"/>

                            <TextView
                                style="@style/profile_screen_text"
                                android:text="@string/txt_rollno"/>

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/sw_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtMedium"
                                style="@style/profile_screen_imp_text"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20dp"/>

                            <TextView
                                style="@style/profile_screen_text"
                                android:text="@string/txt_medium" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="#ccc" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textColor="#595959"/>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_horizontal"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtBOD"
                        style="@style/profile_screen_imp_text"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        style="@style/profile_screen_text"
                        android:textSize="9dp"
                        android:text="@string/txt_bod"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtAddmissionDate"
                        style="@style/profile_screen_imp_text"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        style="@style/profile_screen_text"
                        android:textSize="9dp"
                        android:text="@string/txt_addmissionDate"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtGRNo"
                        style="@style/profile_screen_imp_text"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        style="@style/profile_screen_text"
                        android:textSize="9dp"
                        android:text="@string/txt_GRNo"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtVanNo"
                        style="@style/profile_screen_imp_text"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        style="@style/profile_screen_text"
                        android:textSize="9dp"
                        android:text="@string/txt_VanNo"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/profile_screen_text"
                    android:text="@string/txt_fathername"/>

                <TextView
                    android:id="@+id/txtFatherName"
                    style="@style/profile_screen_imp_text"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="#ccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:text="@string/txt_occupation"
                            android:textSize="9dp"/>

                        <TextView
                            android:id="@+id/txtOccupation"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textSize="13dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:textSize="9dp"
                            android:text="@string/txt_mobile"/>

                        <TextView
                            android:id="@+id/txtMobile"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textSize="13dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:textSize="9dp"
                            android:text="@string/txt_emailId"/>

                        <TextView
                            android:id="@+id/txtEmail"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textAllCaps="false"
                            android:textSize="13dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/profile_screen_text"
                    android:text="@string/txt_mothername"/>

                <TextView
                    android:id="@+id/txtMotherName"
                    style="@style/profile_screen_imp_text"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="#ccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:text="@string/txt_occupation"
                            android:textSize="9dp"/>

                        <TextView
                            android:id="@+id/txtMOccupation"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textSize="13dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_screen_text"
                            android:textSize="9dp"
                            android:text="@string/txt_mobile"/>

                        <TextView
                            android:id="@+id/txtMMobile"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textSize="13dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtMoEmail"
                            style="@style/profile_screen_text"
                            android:textSize="9dp"
                            android:text="@string/txt_emailId"/>

                        <TextView
                            android:id="@+id/txtMEmail"
                            style="@style/profile_screen_imp_text"
                            android:textColor="#595959"
                            android:textAllCaps="false"
                            android:textSize="13dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>